{
  "name": "plugin-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci --loglevel warn --concurrency 4 -- --no-audit",
    "prepare": "husky install",
    "postinstall": "yarn run bootstrap",
    "clean": "lerna run clean && jest --clearCache",
    "build": "webpack",
    "dev": "webpack serve",
    "plugin:new": "ts-node -P tsconfig.node.json mini-star/cli/index.ts createPlugin",
    "plugin:build": "rm -rf ./dist/plugins && ts-node -P tsconfig.node.json ./mini-star/cli/index.ts buildPlugin all",
    "lint": "eslint './**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix './**/*.{ts,tsx}'",
    "test": "jest"
  },
  "keywords": [
    "plugin"
  ],
  "author": "moonrailgun",
  "license": "MIT",
  "lint-staged": {
    "src/*.{json,less}": [
      "prettier --write --config ./.prettierrc.json"
    ],
    "**/*.js": [
      "prettier --write --config ./.prettierrc.json"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write --config ./.prettierrc.json"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "css-loader": "^5.2.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "inquirer": "^8.0.0",
    "jest": "^26.6.3",
    "jsdom": "^16.5.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "rollup": "^2.45.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.5",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "eslint": "^7.25.0"
  }
}
